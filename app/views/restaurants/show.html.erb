<p> <%= notice %> </p>

<h1>Restaurant: <%= @restaurant.name %></h1>

<h3> Category: <%= @restaurant.category %> </h3>

<div class="restaurant-info">
  <h3> Address: <%= @restaurant.address %> </h3>
  <h3> Phone number: <%= @restaurant.phone_number %> </h3>
</div>

<div class="reviews">
  <h3>Reviews:</h3>
  <% @restaurant.reviews.each do |review| %>
    <p> <%= review.rating %> </p>
    <p> <%= review.content %> </p>
  <% end %>
</div>


<div>
  <%= link_to 'Write a review', new_restaurant_review_path(@restaurant), style: "text-decoration: none;" %>
</div>

<%= link_to 'Back to restaurants list', restaurants_path, style: "text-decoration: none;" %>
